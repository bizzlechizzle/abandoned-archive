{
  "name": "@aa/cli",
  "version": "0.1.0",
  "description": "CLI for Abandoned Archive",
  "type": "module",
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "aa": "./bin/aa.js"
  },
  "scripts": {
