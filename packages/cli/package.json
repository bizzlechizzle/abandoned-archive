    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "bin"
  ]
